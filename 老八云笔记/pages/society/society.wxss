.search{
  border-radius: 10px;
  border: 1.5px solid rgb(121, 121, 121);
  color: black;
  height: 25px;
  width: 95%;
  margin-left: 5px;
  font-size: 15px;
}
.line{
  margin-top: 30px;
  height: 2px;
  width:100%;
  background-color: rgb(121, 121, 121);
}

.line1{
  height: 2px;
  width: 100%;
  background-color: rgb(121, 121, 121);
}
.line2{
  height: 1px;
  width: 100%;
  background-color: rgb(121, 121, 121);
}
.artImg {
  width: 40%;
}
.art {
  width: 60%;
}
.artImg image {
  width: 100%;
  height: 200rpx;
}
.content {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.noteInfo {
  position: relative;
  width: 100%;
  height:200rpx;
  box-sizing: border-box;
  padding-left: 10px;
  padding-right: 10px;
  box-shadow: 0 4px 6px rgb(0 0 0 / 6%);
  box-sizing: border-box;
  border-radius: 10px;
}
.title{
  display: flex;
  align-items: center;
  color: #131212;
  font-weight: 600;
  font-size: 20px;
}
/*
margin-bottom: 10px;
  font-size: 16px;
