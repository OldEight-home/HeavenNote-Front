*/
.desc{
  display: flex;
  align-items: center;
  font-size: 14px;
}
.bottomInfo{
  flex-direction: row;
}
.author{
  display: flex;
  position: absolute;
  align-items: center;
  bottom: 2%;
  font-size: 10px;
  color: #464343;
}
.dateTime{
  display: flex;
  position: absolute;
  align-items: center;
  bottom: 2%;
  left:20%;
  font-size: 10px;
  color: #464343;
}
.noteCount{
  display: flex;
  position: absolute;
  align-items: center;
  bottom: 2%;
  left:86%;
  font-size: 12px;
  color: #464343;
}
.noteCountImg{
  display: flex;
  position: absolute;
  align-items: center;
  height:20px;
  width: 20px;
  bottom:2%;
  left:80%;
}