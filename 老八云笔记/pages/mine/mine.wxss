.noteInfo {
	position: relative;
	width: 100%;
	height:200rpx;
	box-sizing: border-box;
	padding-left: 10px;
	padding-right: 10px;
	box-shadow: 0 4px 6px rgb(0 0 0 / 6%);
	box-sizing: border-box;
	border-radius: 10px;
  }
  .title{
	display: flex;
	align-items: center;
	color: #131212;
	font-weight: 600;
	font-size: 20px;
  }
  .desc{
	display: flex;
	align-items: center;
	font-size: 14px;
  }
  .bottomInfo{
	flex-direction: row;
  }
  .author{
	display: flex;
	position: absolute;
	align-items: center;
	bottom: 2%;
	font-size: 10px;
	color: #464343;
  }
  .dateTime{
	display: flex;
	position: absolute;
	align-items: center;
	bottom: 2%;
	left:20%;
	font-size: 10px;
	color: #464343;
  }
  .noteCount{
	display: flex;
